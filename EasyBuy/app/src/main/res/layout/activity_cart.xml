<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/flat_green"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sakib.servertest.Cart">

    <ListView
        android:layout_width="wrap_content"

        android:layout_height="340dp"
        android:id="@+id/listView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="confirm"
        android:textColor="#fff"
        android:layout_marginTop="40dp"
        android:id="@+id/cartConfirmBtn"
        android:background="@drawable/loginbuttonstyle"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/listView2" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/registerbuttonstyle"
        android:text="Remove All"
        android:id="@+id/cartRemoveBtn"

        android:textColor="#fff"
        android:layout_below="@+id/cartConfirmBtn"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Long click to delete Item."
        android:id="@+id/textView17"
        android:textColor="#fff"
        android:layout_below="@+id/listView2"
        android:layout_centerHorizontal="true" />

    TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="cost"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/listView2"
        android:id="@+id/tvShowCost"
        android:textColor="#fff"
        android:layout_alignRight="@+id/listView2"
        android:layout_alignEnd="@+id/listView2" />

    TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Total Cost : "
        android:textStyle="bold"
        android:textColor="#fff"
        android:layout_marginLeft="20dp"
        android:id="@+id/textView18"
        android:layout_below="@+id/listView2"
        />
</RelativeLayout>
